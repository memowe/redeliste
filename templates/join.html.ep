% layout 'default';
% title 'Sitzung betreten';
%= include 'title', subtitle => 'Sitzung betreten'
<section id="form">
    %= form_for join => (method => 'post') => begin
    <div class="row">
        <div class="two columns"></div>
        <div class="four columns">
            %= label_for 'token' => 'Code:'
            %= text_field token => '', id => 'token', class => 'u-full-width', onkeyup => 'this.value = this.value.toUpperCase();'
        </div>
        <div class="four columns">
            %= label_for 'name' => 'Dein Name:'
            %= text_field name => '', id => 'name', class => 'u-full-width'
        </div>
        <div class="two columns"></div>
    </div>
    <div class="row">
        <div class="two columns"></div>
        <div class="four columns">
            %= label_for 'sex' => 'Geschlecht:'
            <%= select_field sex => [
                [MÃ¤nnlich  => 'male'],
                [Weiblich  => 'female'],
                [Sternchen => 'star'],
            ], id => 'sex' %>
        </div>
        <div class="four columns join-button">
            <br>
            %= submit_button 'Betreten', class => 'button button-primary'
        </div>
        <div class="two columns"></div>
    </div>
    % end
</section>
