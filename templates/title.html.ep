<section id="title"<%== defined stash('hero') ? 'class="hero"' : '' %>>
    <div class="row">
        <div class="twelve columns">
        % if (defined stash('hero')) {
            <h1>Redeliste</h1>
        % } else {
            % if (defined stash('token')) {
                <span class="token">Token: <strong><%= stash('token') %></strong></span>
            % }
            <h2>Redeliste: <strong><%= stash('subtitle') // '' %></strong>
        % }
        </div>
    </div>
</section>
